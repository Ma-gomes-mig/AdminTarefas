@model IEnumerable<AdminTarefas.Application.DTOs.AssignmentDTO>

@{
    ViewData["Title"] = "Agenda de Tarefas";
}

<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr/>
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-outline-dark">
                    <span title="Register New" class="fas fa-plus"></span> Registrar Nova Tarefa
                </a>
            </div>
        </div>
    </div>
</div>
<br/>
<div class="panel panel-default">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AssignmentName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AssignmentDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AssignmentPriority)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AssignmentBeginDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AssignmentEndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AssignmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AssignmentDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AssignmentBeginDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AssignmentEndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="btn btn-warning">
                            <span class="fas fa-edit">Edit</span>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="btn btn-warning">
                            <span class="fas fa-edit">Details</span>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="btn btn-warning">
                            <span class="fas fa-edit">Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>